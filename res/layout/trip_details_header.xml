<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:fitsSystemWindows="true"
    app:layout_collapseMode="parallax">

    <TextView
        android:id="@+id/departureView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_drawer_dark_primary_text"
        android:layout_gravity="left|bottom"
        android:layout_above="@+id/arrivalView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:text="Start Location"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/arrivalView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_drawer_dark_primary_text"
        android:layout_gravity="left|center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:text="Final Destination"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/durationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_drawer_dark_primary_text"
        android:layout_gravity="left|center_vertical"
        tools:text="23:42"
        android:layout_above="@+id/arrivalView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_drawer_dark_primary_text"
        android:layout_gravity="left|bottom"
        tools:text="2042-13-37"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
