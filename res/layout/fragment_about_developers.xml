<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/navigation_separator_vertical_padding">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="?attr/cardBackgroundColor"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textSize="@dimen/textSizeLarge_openSource"
                    android:textStyle="normal"
                    android:textColor="?android:attr/textColorPrimary"
                    android:text="@string/maintainer"/>

                <include layout="@layout/divider_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/navigation_padding_bottom"
                    android:layout_marginStart="@dimen/navigation_padding_bottom"
                    android:padding="@dimen/navigation_separator_vertical_padding"
                    tools:ignore="HardcodedText"
                    android:text="Torsten Grote"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="?attr/cardBackgroundColor"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textSize="@dimen/textSizeLarge_openSource"
                    android:textStyle="normal"
                    android:textColor="?android:attr/textColorPrimary"
                    android:text="@string/contributers"/>

                <include layout="@layout/divider_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/navigation_padding_bottom"
                    android:layout_marginStart="@dimen/navigation_padding_bottom"
                    android:padding="@dimen/navigation_separator_vertical_padding"
                    tools:ignore="HardcodedText"
                    android:text="Jochen Sprickerhof"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/navigation_padding_bottom"
                    android:layout_marginStart="@dimen/navigation_padding_bottom"
                    android:padding="@dimen/navigation_separator_vertical_padding"
                    tools:ignore="HardcodedText"
                    android:text="Mats Sjöberg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/navigation_padding_bottom"
                    android:layout_marginStart="@dimen/navigation_padding_bottom"
                    android:padding="@dimen/navigation_separator_vertical_padding"
                    tools:ignore="HardcodedText"
                    android:text="mray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/navigation_padding_bottom"
                    android:layout_marginStart="@dimen/navigation_padding_bottom"
                    android:padding="@dimen/navigation_separator_vertical_padding"
                    tools:ignore="HardcodedText"
                    android:text="Paspartout"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/navigation_padding_bottom"
                    android:layout_marginStart="@dimen/navigation_padding_bottom"
                    android:padding="@dimen/navigation_separator_vertical_padding"
                    tools:ignore="HardcodedText"
                    android:text="Sebastian Grote"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/navigation_padding_bottom"
                    android:layout_marginStart="@dimen/navigation_padding_bottom"
                    android:padding="@dimen/navigation_separator_vertical_padding"
                    tools:ignore="HardcodedText"
                    android:text="Simó Albert i Beltran"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="?attr/cardBackgroundColor"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textSize="@dimen/textSizeLarge_openSource"
                    android:textStyle="normal"
                    android:textColor="?android:attr/textColorPrimary"
                    android:text="@string/translators"/>

                <include layout="@layout/divider_horizontal"/>

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/navigation_padding_bottom"
                    android:layout_marginStart="@dimen/navigation_padding_bottom">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/navigation_separator_vertical_padding"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="@string/dutch"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/navigation_separator_vertical_padding"
                            tools:ignore="HardcodedText"
                            android:text="TheLastProject"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/navigation_separator_vertical_padding"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="@string/french"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/navigation_separator_vertical_padding"
                            tools:ignore="HardcodedText"
                            android:text="Cryptie, Alain-Olivier"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/navigation_separator_vertical_padding"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="@string/german"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/navigation_separator_vertical_padding"
                            tools:ignore="HardcodedText"
                            android:text="Benedikt Volkmer, Torsten Grote"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/navigation_separator_vertical_padding"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="@string/italian"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/navigation_separator_vertical_padding"
                            tools:ignore="HardcodedText"
                            android:text="Giuseppe Pignataro"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/navigation_separator_vertical_padding"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="@string/portuguese_br"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/navigation_separator_vertical_padding"
                            tools:ignore="HardcodedText"
                            android:text="Gislene Kucker Arantes, Paulo Martins"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/navigation_separator_vertical_padding"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="@string/spanish"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/navigation_separator_vertical_padding"
                            tools:ignore="HardcodedText"
                            android:text="Adolfo Jayme Barrientos"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/navigation_separator_vertical_padding"
                            android:textColor="?android:attr/textColorPrimary"
                            android:text="@string/turkish"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/navigation_separator_vertical_padding"
                            android:text="Emre Deniz"
                            tools:ignore="HardcodedText"/>
                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>