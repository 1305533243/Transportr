<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Card"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingEnd="2dp"
        android:paddingLeft="5dp"
        android:paddingStart="10dp"
        android:paddingBottom="2dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/favouriteFromView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/trip_from"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/trip_from"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="?android:attr/textColorPrimary"
                tools:text="Turmstr. (U)"/>

            <TextView
                android:id="@+id/favouriteViaView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/trip_via"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/trip_via"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="?android:attr/textColorPrimary"
                tools:text="Ostkreuz"/>

            <TextView
                android:id="@+id/favouriteToView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/trip_to"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/trip_to"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="?android:attr/textColorPrimary"
                tools:text="Zoologischer Garten (S+U)"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:id="@+id/moreButton"
            app:srcCompat="@drawable/ic_more_vert"
            android:scaleType="centerCrop"
            android:contentDescription="@string/more"
            android:background="?attr/actionBarItemBackground"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
</android.support.v7.widget.CardView>