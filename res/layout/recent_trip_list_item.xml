<?xml version="1.0" encoding="utf-8"?>
<de.grobox.liberario.ui.RecentTripsLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="0dp"
	android:paddingLeft="6dp"
	android:paddingRight="6dp"
	android:paddingTop="5dp">

	<android.support.v7.widget.CardView
		style="@style/Card"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:foreground="?android:attr/selectableItemBackground">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="?android:attr/selectableItemBackground"
			android:paddingBottom="2dp"
			android:paddingEnd="2dp"
			android:paddingLeft="5dp"
			android:paddingRight="2dp"
			android:paddingStart="5dp"
			android:paddingTop="2dp">

			<CheckBox
				android:id="@+id/checkBox"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"/>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_weight="1"
				android:orientation="vertical">

				<TextView
					android:id="@+id/recentFromView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:drawableLeft="@drawable/trip_from"
					android:drawablePadding="2dp"
					android:drawableStart="@drawable/trip_from"
					android:ellipsize="middle"
					android:gravity="center_vertical"
					android:singleLine="true"
					android:textColor="?android:attr/textColorPrimary"
					tools:text="Turmstr. (U)"/>

				<TextView
					android:id="@+id/recentViaView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:drawableLeft="@drawable/trip_via"
					android:drawablePadding="2dp"
					android:drawableStart="@drawable/trip_via"
					android:ellipsize="middle"
					android:gravity="center_vertical"
					android:singleLine="true"
					android:textColor="?android:attr/textColorPrimary"
					tools:text="Ostkreuz"/>

				<TextView
					android:id="@+id/recentToView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:drawableLeft="@drawable/trip_to"
					android:drawablePadding="2dp"
					android:drawableStart="@drawable/trip_to"
					android:ellipsize="middle"
					android:gravity="center_vertical"
					android:singleLine="true"
					android:textColor="?android:attr/textColorPrimary"
					tools:text="Zoologischer Garten (S+U)"/>

			</LinearLayout>

			<TextView
				android:id="@+id/recentCountView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="2dp"
				android:layout_marginStart="2dp"
				tools:text="142"/>

			<ImageButton
				android:id="@+id/moreButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginBottom="8dp"
				android:layout_marginLeft="3dp"
				android:layout_marginRight="3dp"
				android:layout_marginTop="8dp"
				android:background="?attr/actionBarItemBackground"
				android:contentDescription="@string/more"
				android:scaleType="centerCrop"
				app:srcCompat="@drawable/ic_more_vert"/>

		</LinearLayout>
	</android.support.v7.widget.CardView>
</de.grobox.liberario.ui.RecentTripsLayout>