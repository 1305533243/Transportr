<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:showIn="@layout/trip"
    app:orientation="horizontal"
    app:columnCount="3"
    >

    <TextView
        android:id="@+id/departureTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        tools:text="9:15"
        app:layout_row="0"
        app:layout_column="0"
        />

    <TextView
        android:id="@+id/departureDelayView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:padding="2dp"
        android:textColor="@color/holo_red_light"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        tools:text="+10"
        app:layout_row="0"
        app:layout_column="1"
        />

    <TextView
        android:id="@+id/departureLocationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Departure Station with a longer name"
        app:layout_row="0"
        app:layout_column="2"
        />

    <include
        android:id="@+id/infoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/line"
        app:layout_row="1"
        app:layout_column="2"
        />

    <TextView
        android:id="@+id/arrivalTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        tools:text="9:15"
        app:layout_row="2"
        app:layout_column="0"
        />

    <TextView
        android:id="@+id/arrivalDelayView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:padding="2dp"
        android:textColor="@color/holo_red_light"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        tools:text="+10"
        app:layout_row="2"
        app:layout_column="1"
        />

    <TextView
        android:id="@+id/arrivalLocationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Arrival Station with a name"
        app:layout_row="2"
        app:layout_column="2"
        />

</android.support.v7.widget.GridLayout>